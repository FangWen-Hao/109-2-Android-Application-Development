<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usernavigationhw">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UserNavigationHW">
        <activity
            android:name=".ActivityFive"
            android:label="@string/title_activity_five"
            android:theme="@style/Theme.UserNavigationHW.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".ActivityFour"
            android:label="@string/title_activity_four"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.UserNavigationHW.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ActivityIceCream"
            android:label="@string/title_activity_ice_cream"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.UserNavigationHW.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ActivityFroyo"
            android:label="@string/title_activity_froyo"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.UserNavigationHW.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ActivityDonut"
            android:label="@string/title_activity_donut"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.UserNavigationHW.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.UserNavigationHW.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>